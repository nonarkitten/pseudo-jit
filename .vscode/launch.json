    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex Debug",
            "cwd": "${workspaceFolder}",
            "executable": "./binaries/debug/buffee_bootloader.elf",
            "device": "AM3358",
            "request": "launch",
            "type": "cortex-debug",
            "breakAfterReset": true,
            "overrideLaunchCommands": [
                "monitor reset halt",
                "load",
                "monitor reset halt",
                "break main",
                "jump Reset_Handler"
            ],
            "interface": "jtag",
            "servertype": "jlink"
        }
    ]
}