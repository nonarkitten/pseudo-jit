    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex Debug",
            "cwd": "${workspaceFolder}",
            "executable": "bin/debug/buffee.elf",
            "device": "AM3358",
            "request": "launch",
            "type": "cortex-debug",            
            "serverArgs": [ "-endian", "big" ],
            "overrideLaunchCommands": [
                "monitor reset halt",
                "load",
                "monitor reset halt",
                "set endian big",
                "break main",
                // "jump Reset_Handler"
            ],
            "interface": "jtag",
            "servertype": "jlink"
        }
    ]
}